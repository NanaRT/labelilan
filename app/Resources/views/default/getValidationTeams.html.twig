{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Team list</h1>
			
			    <table class="table table-hover">
			        <thead>
			            <tr>
			            	<th>Nb Players</th>
			            	<th>Game</th>
			                <th>Name</th>
			                <th>Player</th>
			                <th>Player</th>
			                <th>Player</th>
			                <th>Player</th>
			                <th>Player</th>
			                <th>Player</th>
			                <th>Validate Team</th>
			            </tr>
			        </thead>
			        <tbody>
	        			{% for team in teams %}
				            <tr>
				            	<td>
				            		{{team.game.nbplayers}}
				            	</td>
				            	<td>
				            		{{team.game.systName}}
				            	</td>
				            	<td>
				            		{{team.name}}
				            	</td>
				            	{%for player in team.player%}
				            		<td>
				            			{%if player.capitain==1%}
				            				<strong>
				            					{{player.pseudo}}
				            				</strong>
				            			{%else%}
				            				{{player.pseudo}}
				            			{%endif%}
				            			{%if player.user.payed==1%}
				            				<br>=> PAYED
				            			{%endif%}
				            		</td>
				            	{%endfor%}
				            	{%for i in (team.player|length)..5%}
				            		<td>
				            		</td>
				            	{%endfor%}
				            	<td>
				            		VALID
				            	</td>
				            </tr>
				        {% endfor %}
			        </tbody>
			    </table>
	        </div>
	    </div>
    {%endif%}
{%endblock%}