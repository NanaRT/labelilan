{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Organizer</h1>
			
			    <table>
			        <tbody>
			            <tr>
			                <th>Id</th>
			                <td>{{ organizer.id }}</td>
			            </tr>
			            <tr>
			                <th>Name</th>
			                <td>{{ organizer.name }}</td>
			            </tr>
			            <tr>
			                <th>Systname</th>
			                <td>{{ organizer.systName }}</td>
			            </tr>
			        </tbody>
			    </table>
			
			    <ul>
			        <li>
			            <a href="{{ path('organizer_index') }}">Back to the list</a>
			        </li>
			        <li>
			            <a href="{{ path('organizer_edit', { 'id': organizer.id }) }}">Edit</a>
			        </li>
			        <li>
			            {{ form_start(delete_form) }}
			                <input type="submit" value="Delete">
			            {{ form_end(delete_form) }}
			        </li>
			    </ul>
			</div>
		</div>
	{%endif%}
{% endblock %}
