{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Organizer list</h1>
			
			    <table class="table table-hover">
			        <thead>
			            <tr>
			                <th>Id</th>
			                <th>Name</th>
			                <th>Systname</th>
			                <th>Description</th>
			                <th>Actions</th>
			            </tr>
			        </thead>
			        <tbody>
			        {% for organizer in organizers %}
			            <tr>
			                <td><a href="{{ path('organizer_show', { 'id': organizer.id }) }}">{{ organizer.id }}</a></td>
			                <td>{{ organizer.name }}</td>
			                <td>{{ organizer.systName }}</td>
			                <td>{{ organizer.description }}</td>
			                <td>
			                	<a class="btn btn-default"  href="{{ path('organizer_edit', { 'id': organizer.id }) }}">edit</a>
			                </td>
			            </tr>
			        {% endfor %}
			        </tbody>
			    </table>
			
			    <a class="btn btn-default"  href="{{ path('organizer_new') }}">Create a new entry</a>
			</div>
		</div>
	{%endif%}
{% endblock %}
