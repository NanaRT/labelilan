{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <h1>Team list</h1>
	
	    <table>
	        <thead>
	            <tr>
	                <th>Id</th>
	                <th>Name</th>
	                <th>Actions</th>
	            </tr>
	        </thead>
	        <tbody>
	        {% for team in teams %}
	            <tr>
	                <td><a href="{{ path('team_show', { 'id': team.id }) }}">{{ team.id }}</a></td>
	                <td>{{ team.name }}</td>
	                <td>
	                    <ul>
	                        <li>
	                            <a href="{{ path('team_show', { 'id': team.id }) }}">show</a>
	                        </li>
	                        <li>
	                            <a href="{{ path('team_edit', { 'id': team.id }) }}">edit</a>
	                        </li>
	                    </ul>
	                </td>
	            </tr>
	        {% endfor %}
	        </tbody>
	    </table>
	
	    <ul>
	        <li>
	            <a href="{{ path('team_new') }}">Create a new entry</a>
	        </li>
	    </ul>
	{%endif%}
{% endblock %}
