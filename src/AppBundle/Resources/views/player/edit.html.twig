{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
			<center><h1>Editer Informations Joueur/Tournoi</h1></center>
    		<hr>
    		<br>
			{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}

		    {{ form_start(edit_form) }}
		        {{ form_widget(edit_form) }}
		        	<button class="btn btn-primary btn-lg btn-block" type="submit" value="Edit">
				        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
				        Editer
			        </button>
		    {{ form_end(edit_form) }}
			<br>
			<center><img src="{{ asset('bundles/app/img/game/'~player.game.systName~'.jpg') }}" alt="{{player.game.name}}"></center>
			<br>
        </div>
    </div>
{% endblock %}
