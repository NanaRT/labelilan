{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Player list</h1>
			
			    <table class="table table-hover">
			        <thead>
			            <tr>
			                <th>Id</th>
			                <th>Pseudo</th>
			                <th>Actions</th>
			            </tr>
			        </thead>
			        <tbody>
			        {% for player in players %}
			            <tr>
			                <td><a href="{{ path('player_show', { 'id': player.id }) }}">{{ player.id }}</a></td>
			                <td>{{ player.pseudo }}</td>
			                <td>
			                	<a class="btn btn-default" href="{{ path('player_edit', { 'id': player.id }) }}">edit</a>
			                </td>
			            </tr>
			        {% endfor %}
			        </tbody>
			    </table>
				<a class="btn btn-default"  href="{{ path('player_new') }}">Create a new entry</a>
			</div>
		</div>
	{%endif%}
{% endblock %}
