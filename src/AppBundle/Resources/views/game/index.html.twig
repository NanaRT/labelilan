{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Game list</h1>
			
			    <table>
			        <thead>
			            <tr>
			                <th>Id</th>
			                <th>Name</th>
			                <th>Systname</th>
			                <th>Actions</th>
			            </tr>
			        </thead>
			        <tbody>
			        {% for game in games %}
			            <tr>
			                <td><a href="{{ path('game_show', { 'id': game.id }) }}">{{ game.id }}</a></td>
			                <td>{{ game.name }}</td>
			                <td>{{ game.systName }}</td>
			                <td>
			                    <ul>
			                        <li>
			                            <a href="{{ path('game_show', { 'id': game.id }) }}">show</a>
			                        </li>
			                        <li>
			                            <a href="{{ path('game_edit', { 'id': game.id }) }}">edit</a>
			                        </li>
			                    </ul>
			                </td>
			            </tr>
			        {% endfor %}
			        </tbody>
			    </table>
			
			    <ul>
			        <li>
			            <a href="{{ path('game_new') }}">Create a new entry</a>
			        </li>
			    </ul>
			</div>
		</div>
	{%endif%}
{% endblock %}
