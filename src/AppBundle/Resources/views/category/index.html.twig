{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Category list</h1>
			
			    <table class="table table-hover">
			        <thead>
			            <tr>
			                <th>Id</th>
			                <th>Name</th>
			                <th>Systname</th>
			                <th>Actions</th>
			            </tr>
			        </thead>
			        <tbody>
			        {% for category in categories %}
			            <tr>
			                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
			                <td>{{ category.name }}</td>
			                <td>{{ category.systName }}</td>
			                <td>
			                	<a  class="btn btn-default" href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
			                </td>
			            </tr>
			        {% endfor %}
			        </tbody>
			    </table>
			
			    <ul>
			        <li>
			            <a class="btn btn-default" href="{{ path('category_new') }}">Create a new entry</a>
			        </li>
			    </ul>
			</div>
		</div>
	{%endif%}
{% endblock %}
