{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_USER"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Partner list</h1>
			
			    <table class="table table-hover">
			        <thead>
			            <tr>
			                <th>Id</th>
			                <th>Name</th>
			                <th>Description</th>
			                <th>Actions</th>
			            </tr>
			        </thead>
			        <tbody>
			        {% for partner in partners %}
			            <tr>
			                <td><a href="{{ path('partner_show', { 'id': partner.id }) }}">{{ partner.id }}</a></td>
			                <td>{{ partner.name }}</td>
			                <td>{{ partner.description }}</td>
			                <td>
			                	<a href="{{ path('partner_edit', { 'id': partner.id }) }}">edit</a>
			                </td>
			            </tr>
			        {% endfor %}
			        </tbody>
			    </table>
			
			    <a class="btn btn-default" href="{{ path('partner_new') }}">Create a new entry</a>
			</div>
		</div>
	{%endif%}
{% endblock %}
