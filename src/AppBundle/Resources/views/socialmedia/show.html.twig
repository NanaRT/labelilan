{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>SocialMedia</h1>
			
			    <table>
			        <tbody>
			            <tr>
			                <th>Id</th>
			                <td>{{ socialMedia.id }}</td>
			            </tr>
			            <tr>
			                <th>Name</th>
			                <td>{{ socialMedia.name }}</td>
			            </tr>
			            <tr>
			                <th>Link</th>
			                <td>{{ socialMedia.link }}</td>
			            </tr>
			            <tr>
			                <th>Icon</th>
			                <td>{{ socialMedia.icon }}</td>
			            </tr>
			        </tbody>
			    </table>
			
			    <ul>
			        <li>
			            <a href="{{ path('socialmedia_index') }}">Back to the list</a>
			        </li>
			        <li>
			            <a href="{{ path('socialmedia_edit', { 'id': socialMedia.id }) }}">Edit</a>
			        </li>
			        <li>
			            {{ form_start(delete_form) }}
			                <input type="submit" value="Delete">
			            {{ form_end(delete_form) }}
			        </li>
			    </ul>
			</div>
		</div>
	{%endif%}
{% endblock %}
