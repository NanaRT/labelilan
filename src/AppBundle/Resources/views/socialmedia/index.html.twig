{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_USER"))%}
	    <div class="container">
	        <div class="row">
			    <h1>SocialMedia list</h1>
			
			    <table class="table table-hover">
			        <thead>
			            <tr>
			                <th>Id</th>
			                <th>Name</th>
			                <th>Link</th>
			                <th>Icon</th>
			                <th>Organizer</th>
			                <th>Partner</th>
			                <th>Actions</th>
			            </tr>
			        </thead>
			        <tbody>
			        {% for socialMedia in socialMedia %}
			            <tr>
			                <td><a href="{{ path('socialmedia_show', { 'id': socialMedia.id }) }}">{{ socialMedia.id }}</a></td>
			                <td>{{ socialMedia.name }}</td>
			                <td>{{ socialMedia.link }}</td>
			                <td>{{ socialMedia.icon }}</td>
			                {%if socialMedia.organizer%}
			                	<td>{{ socialMedia.organizer.name }}</td>
		                	{%else%}
		                		<td></td>
			                {%endif%}
			                {%if socialMedia.partner%}
			                	<td>{{ socialMedia.partner.name }}</td>
		                	{%else%}
		                		<td></td>
			                {%endif%}
			                <td>
			                	<a class="btn btn-default" href="{{ path('socialmedia_edit', { 'id': socialMedia.id }) }}">edit</a>
			                </td>
			            </tr>
			        {% endfor %}
			        </tbody>
			    </table>
			
			    <a class="btn btn-default" href="{{ path('socialmedia_new') }}">Create a new entry</a>
			</div>
		</div>
	{%endif%}
{% endblock %}
