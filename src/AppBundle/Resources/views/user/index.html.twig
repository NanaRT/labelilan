{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>User list</h1>
			
			    <table class="table table-hover">
			        <thead>
			            <tr>
			                <th>Id</th>
			                <th>Actions</th>
			            </tr>
			        </thead>
			        <tbody>
			        {% for user in users %}
			            <tr>
			                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
			                <td>
			                	<a class="btn btn-default"  href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
			                </td>
			            </tr>
			        {% endfor %}
			        </tbody>
			    </table>
			</div>
		</div>
	{%endif%}
{% endblock %}
