{% extends 'base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Labeli list</h1>
			    <a class="btn btn-default"  href="{{ path('labeli') }}">
	                Liste Label[i]
	            </a>
			    <a class="btn btn-default"  href="{{ path('labeli_by_honored') }}">
	                Invit√©s d'honneur
	            </a>
			    <a class="btn btn-default"  href="{{ path('labeli_by_no_cotisation') }}">
	                Pas cotisation
	            </a>
			    
			
			    <table class="table table-hover">
			        <thead>
			            <tr>
			                <th>Nom</th>
			                <th>Prenom</th>
			                <th>Mail</th>
			                <th>Honored</th>
			                <th>NoCotisation</th>
			                <th>Actions</th>
			            </tr>
			        </thead>
			        <tbody>
			        {% for entity in entities %}
			            <tr>
			                <td><a href="{{ path('labeli_show', { 'id': entity.id }) }}">{{ entity.nom }}</a></td>
			                <td>{{ entity.prenom }}</td>
			                <td>{{ entity.mail }}</td>
			                <td>
			                	{%if entity.honored%}
									<i class="fa fa-star fa-2x"></i>
								{%endif%}
							</td>
			                <td>
			                	{%if entity.noCotisation%}
			                		<i class="fa fa-money fa-2x"></i>
			                	{%endif%}
							</td>
			                <td>
			                <ul>
			                    <li>
			                        <a class="btn btn-default" href="{{ path('labeli_show', { 'id': entity.id }) }}">show</a>
			                    </li>
			                    <li>
			                        <a class="btn btn-default" href="{{ path('labeli_edit', { 'id': entity.id }) }}">edit</a>
			                    </li>
			                </ul>
			                </td>
			            </tr>
			        {% endfor %}
			        </tbody>
			    </table>
			
	            <a class="btn btn-primary btn-lg btn-block"  href="{{ path('labeli_new') }}">
	                Create a new entry
	            </a>
			</div>
		</div>
	{%endif%}
{% endblock %}
