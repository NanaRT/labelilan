{% block body -%}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Ordering</h1>
			
			    <table class="record_properties">
			        <tbody>
			            <tr>
			                <th>Id</th>
