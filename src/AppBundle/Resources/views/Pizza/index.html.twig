{% extends '::base.html.twig' %}

{% block body -%}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Pizza list</h1>
			
			    <table class="table table-hover">
			        <thead>
			            <tr>
			                <th>Id</th>
			                <th>Name</th>
			                <th>Description</th>
			                <th>Stock</th>
			                <th>Actions</th>
			            </tr>
			        </thead>
			        <tbody>
			        {% for entity in entities %}
			            <tr>
			                <td><a href="{{ path('pizza_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
			                <td>{{ entity.name }}</td>
			                <td>{{ entity.description }}</td>
			                <td>{{ entity.stock }}</td>
			                <td>
			                <ul>
			                    <li>
			                        <a href="{{ path('pizza_show', { 'id': entity.id }) }}">show</a>
			                    </li>
			                    <li>
			                        <a href="{{ path('pizza_edit', { 'id': entity.id }) }}">edit</a>
			                    </li>
			                </ul>
			                </td>
			            </tr>
			        {% endfor %}
			        </tbody>
			    </table>
			
			        <ul>
			        <li>
			            <a href="{{ path('pizza_new') }}">
			                Create a new entry
			            </a>
			        </li>
			    </ul>
			</div>
		</div>
	{%endif%}
{% endblock %}
