{% extends '::base.html.twig' %}

{% block body %}
	{%if (is_granted("ROLE_ADMIN"))%}
	    <div class="container">
	        <div class="row">
			    <h1>Pizza</h1>
			
			    <table class="record_properties">
			        <tbody>
			            <tr>
			                <th>Id</th>
			                <td>{{ entity.id }}</td>
			            </tr>
			            <tr>
			                <th>Name</th>
			                <td>{{ entity.name }}</td>
			            </tr>
			            <tr>
			                <th>Description</th>
			                <td>{{ entity.description }}</td>
			            </tr>
			            <tr>
			                <th>Stock</th>
			                <td>{{ entity.stock }}</td>
			            </tr>
			        </tbody>
			    </table>
			
			        <ul class="record_actions">
			    <li>
			        <a href="{{ path('pizza') }}">
			            Back to the list
			        </a>
			    </li>
			    <li>
			        <a href="{{ path('pizza_edit', { 'id': entity.id }) }}">
			            Edit
			        </a>
			    </li>
			    <li>{{ form(delete_form) }}</li>
			</ul>
		        
			</div>
		</div>
	{%endif%}
{% endblock %}
			
